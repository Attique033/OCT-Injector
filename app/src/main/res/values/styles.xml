<!--	</style>-->
	
	
	<style name="TextLimitStyle" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/colorAccent</item>
		<item name="android:textStyle">bold</item>
    <item name="android:textSize">18sp</item>
	</style>

	<style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/red</item>
	</style>
	
	<!-- Toolbar theme -->
	<style name="PrefTheme" parent="@style/PreferenceThemeOverlay">
		<item name="preferenceFragmentListStyle">@style/customPreferenceFragmentList</item>
		<item name="android:windowBackground">@color/prefBg</item>
		<item name="android:tint">@color/colorAccent</item>
		<item name="android:textSize">12.0dip</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingRight">0dp</item>
		<item name="android:fontFamily">@font/googlesans</item>
        <item name="preferenceCategoryStyle">@style/CategoryStyle</item>
    </style>
	<style name="CategoryStyle" parent="Preference.Category">
        <item name="android:layout">@layout/pref_category_view</item>
    </style>
	<!-- Preference Theme -->
	<style name="AppPreference"
        parent="PreferenceThemeOverlay">
	</style>
	<style name="ToolbarTitleTheme"
		parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">19.0dip</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textStyle">bold</item>
		<item name="android:fontFamily">@font/googlesans</item>
		<item name="android:shadowColor">#ff000000</item>
		<item name="android:shadowDy">2.0</item>
		<item name="android:shadowRadius">2.0</item>

	</style>

	<style name="customPreferenceFragmentList">
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingRight">0dp</item>
		<item name="android:paddingStart">0dp</item>
		<item name="android:paddingEnd">0dp</item>
	</style>

	<style name="TextView0" parent="@android:style/TextAppearance">
		<item name="android:textSize">9.0dip</item>
	</style>
	<style name="TextView" parent="@android:style/TextAppearance">
		<item name="android:textSize">10.0dip</item>
	</style>
	<style name="TextView1" parent="@android:style/TextAppearance">
		<item name="android:textSize">12.0dip</item>
	</style>
	<style name="TextView2" parent="@android:style/TextAppearance">
		<item name="android:textSize">13.0dip</item>
	</style>
	<style name="TextView3" parent="@android:style/TextAppearance">
		<item name="android:textSize">17.0dip</item>
	</style>
	<style name="TextView4" parent="@android:style/TextAppearance">
