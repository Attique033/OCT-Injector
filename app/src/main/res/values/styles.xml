<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	
	<declare-styleable name="MaterialButton">
        <attr name="colorPressed" format="color" />
        <attr name="colorNormal" format="color" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
	<declare-styleable name="ExpandCollapseCard">
        <attr name="title" format="string" />
        <attr name="title_size" format="dimension" />
        <attr name="title_color" format="color" />
        <attr name="title_background_color" format="color" />
        <attr name="item_inner_view" format="reference" />
        <attr name="expand_icon" format="reference" />
        <attr name="collapse_icon" format="reference" />
    </declare-styleable>
	
	
	<declare-styleable name="ExpandableCardView">
        <attr name="titlee" format="string"/>
        <attr name="iconn" format="reference"/>
        <attr name="inner_view" format="reference"/>
        <attr name="expandOnClick" format="boolean"/>
        <attr name="animationDuration" format="integer"/>
        <attr name="startExpanded" format="boolean"/>
    </declare-styleable>
	

	<declare-styleable name="ParticleView">
        <attr name="pv_host_text" format="string"></attr>
        <attr name="pv_host_text_size" format="dimension"></attr>
        <attr name="pv_particle_text" format="string"></attr>
        <attr name="pv_particle_text_size" format="dimension"></attr>
        <attr name="pv_text_color" format="color"></attr>
        <attr name="pv_background_color" format="color"></attr>
        <attr name="pv_text_anim_time" format="integer"></attr>
        <attr name="pv_spread_anim_time" format="integer"></attr>
        <attr name="pv_host_text_anim_time" format="integer"></attr>
		
	</declare-styleable>
	
	<!-- Style geral do app -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorSecondary</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="preferenceTheme">@style/AppPreference</item>
		<item name="alertDialogTheme">@style/AppAlertDialog</item>
		<item name="preferenceTheme">@style/PrefTheme</item>
		<item name="android:fontFamily">@font/googlesans</item>
		<!--<item name="android:textColorPrimary">@color/textColorPrimary</item>
		<item name="android:textColorSecondary">@color/textColorSecondary</item>-->
		<item name="android:textColor">@color/colorText</item>
		<item name="android:textColorHint">@color/colorText</item>
		<item name="android:navigationBarColor" tools:targetApi="21">@color/colorPrimary</item>
		
		<item name="buttonTint">@color/colorText</item>
	</style>
	
	<!-- Alert Dialog -->
	<style name="AppAlertDialog"
        parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColor">@color/colorText</item>
		<item name="android:textColorHint">@color/colorText</item>
		<item name="buttonTint">@color/colorText</item>
		<item name="android:fontFamily">@font/googlesans</item>
	</style>
	
	
	<!-- Preference Theme -->
