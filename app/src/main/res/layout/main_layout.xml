<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/mainlayoutScrollView">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<LinearLayout
			android:id="@+id/activity_mainLinearLayout"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">

			<com.slipkprojects.sockshttp.view.MaterialButton
				android:typeface="monospace"
				android:id="@+id/activity_starterButtonMain"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_margin="10dp"
				app:cornerRadius="5dp"
				android:textColor="#FFFFFFFF"/>

			<androidx.cardview.widget.CardView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="2.0dip"
				app:cardElevation="2.0dip"
				android:foreground="?android:attr/selectableItemBackground"
				android:id="@+id/tunnelCardView"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:layout_margin="10dp"
					android:gravity="center">

					<ImageButton
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:background="#00000000"
						android:tint="?colorPrimary"
						android:src="@drawable/es"/>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="DIRECT SSH"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:layout_weight="1.0"
						android:textSize="15sp"
						android:layout_marginLeft="5dp"
						android:id="@+id/activitymainTextView1"/>

					<ImageButton
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:background="#00000000"
						android:tint="?colorPrimary"
						android:src="@drawable/f0"/>

				</LinearLayout>

			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="2.0dip"
				app:cardElevation="2.0dip"
				android:foreground="?android:attr/selectableItemBackground"
				android:id="@+id/ttttt"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="3dp"
				android:layout_marginRight="8dp">
			
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="5dp"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="VPN Status:"
						android:layout_marginRight="6dp"
						android:typeface="serif"
						android:gravity="center"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Disconnected"
						android:paddingLeft="5dp"
						android:id="@+id/status"
						android:textStyle="bold"
						android:typeface="serif"/>

				</LinearLayout>

			</LinearLayout>

			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="2.0dip"
				app:cardElevation="2.0dip"
				app:contentPadding="10dip"
				android:id="@+id/connection_cardView"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:layout_marginTop="10dp">

				<include
					layout="@layout/connection_layout"/>

			</androidx.cardview.widget.CardView>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center">

				<LinearLayout
					android:id="@+id/load_main"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="3dp"/>

			</LinearLayout>

			<androidx.cardview.widget.CardView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="2.0dip"
				app:cardElevation="2.0dip"
				app:contentPadding="10dip"
				android:id="@+id/configMSGCardView"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:layout_marginTop="3dp">

				<include
					layout="@layout/config_msg"/>

			</androidx.cardview.widget.CardView>

			<View
				android:layout_width="match_parent"
				android:layout_height="10dp"/>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="10dp"/>

	</RelativeLayout>

</ScrollView>

